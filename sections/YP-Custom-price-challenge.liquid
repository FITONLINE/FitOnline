{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .YP-Custom-price-description {
    max-width:93.8rem;
  }
  .price-challenge-text {
    margin: 0 0 2rem;
    font-size: 2.5rem;
  }
  .price-negotiation-condition {
    margin:0;
    font-size:1.1rem;
  }
  .conditions-list {
    margin-top: 0;
    padding: 0 1rem 0;
    font-size:1rem;
  }

  @media screen and (max-width: 700px) {
    .price-challenge-text {
      font-size: 1.8rem;
    }
  }
  .asterisk {
    font-size: 1rem;
    vertical-align: top;
  }
  
{%- endstyle -%}

<div id="{{ section.settings.section-id }}" class="YP-Custom-price-description color-{{ section.settings.color_scheme }} gradient page-width">
  <div class="section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%} 
    <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin {% if section.settings.title-center != false %}title-center{% endif %}">
        {% if section.settings.title-en != blank %}
        <p class="title-en">{{ section.settings.title-en }}</p>
        {% endif %}
      <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
    </div>
    {% endunless %}
    {{ section.settings.custom_liquid }}
    {{ section.settings.custom_liquid2 }}
  </div>
</div>

{% schema %}
{
  "name": "YPカスタムプライスチャレンジ",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.multicolumn.settings.title.label"
    },
    {
      "type": "checkbox",
      "id": "title-center",
      "default": false,
      "label": "タイトルセンター寄せ"
    },
    {
      "type": "text",
      "id": "title-en",
      "label": "英語見出し"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "liquid",
      "id": "custom_liquid2",
      "label": "カスタマイズされたLiquid2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "text",
      "id": "section-id",
      "label": "セクションID"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "YPカスタムプライスチャレンジ"
    }
  ]
}
{% endschema %}
