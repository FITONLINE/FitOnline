<style>
          .article-author-container {
            background: #f7f7f7;
            margin-bottom: 3rem;
            padding: 2rem;
          }
          .author-detail-btn-wrapper {
            text-align: center;
          }
          .author-detail-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: #0A1E27;
            color: #fff;
            width: 145px;
            height: 45px;
            text-decoration: none;
          }
          .article-author-wrapper {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            align-items: center;
            justify-content: flex-start;
            column-gap: 3.5rem;
          }
          .author-image-wrapper {
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
            flex-basis:20%;
          }
          .author-name {
            font-weight:bold;
          }
          .author-image {
            width:100%;
            height:auto;
          }
          .author-text-wrapper {
            display: flex;
            flex-basis:80%;
          }
          .author-text-wraper ul {
            font-size: 1.5rem;
            padding-left: 0;
            margin: 0;
          }
          @media screen and (max-width: 600px) {
            .article-author-wrapper {
              flex-direction: column;
              flex-wrap: wrap;
            }
          .author-image {
            width:130px;
          }
          .author-text-wrapper ul {
            padding-left: 2rem;
          }
          }
  .article-author a {
    text-decoration: unset;
  }
        </style>

<div class="article-author">
          <h3>{{ author_title }}</h3>
        <div class="article-author-container">
          <div class="article-author-wrapper">
            <div class="author-image-wrapper">
              <img class="author-image" 
                src="{{ author_img  | img_url: '320x'  }}" 
                loading="lazy"
                alt="{{ author_img.alt | escape }}"
                width="165"
                height="165">
              <p class="author-name" style="margin-bottom: 0;"> {{ author_name }}</p>
              <div class="sns-links">
