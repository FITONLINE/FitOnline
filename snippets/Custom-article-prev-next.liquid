<style>
  .article-prev-next-container {
    display: flex;
    justify-content: space-between;
    border: 1px solid;
  }
  .article-prev-next-container a {
    padding: 10px 25px;
    display: inline-block;
    text-decoration: none;
    background: #0A1E27;
    color: #fff;
  }
  .article-prev-next-container span {
    padding: 10px 25px;
    display: inline-block;
    text-decoration: none;
    background: #0A1E27;
    color: #fff;
    opacity: 0.6;
  }

  @media screen and (max-width: 749px) {
    .article-prev-next-container a,
    .article-prev-next-container span {
      padding: 5px 5px;
      text-align: center;
      font-size:1.4rem;
    }
  }
  
</style>

<div class="article-prev-next-container">
  <div class="prev">
{% if blog.previous_article %}
  {{ '一つ前の記事' | link_to: blog.previous_article }}
  {% else %}
  <span>一つ前の記事</span>
  {% endif %}
  </div>
  <div class="back-to-all">
    <a href="{{ blog.url }}">
      {{ 'blogs.article.back_to_blog' | t: title: blog.title }}
    </a>
  </div>
    <div class="next">
  {% if blog.next_article %}
      {{ '一つ後の記事' | link_to: blog.next_article }}
    {% else %}
    <span>一つ後の記事</span>
    {% endif %}       
    </div>
</div>
